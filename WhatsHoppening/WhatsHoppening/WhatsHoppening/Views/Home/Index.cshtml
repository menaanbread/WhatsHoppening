@model List<Post>

@using WhatsHoppening.Domain

@{
    ViewBag.Title = "Home Page";
}

@foreach (var post in Model)
{
    <div class="jumbotron">
        <h2>@post.User.UserName : @post.Beer.Name - @post.Bar.Name</h2>
        <p>@post.Content</p>
        <p>@post.Rating/5</p>
        <p>@post.TimeStamp.ToShortDateString() @post.TimeStamp.ToShortTimeString()</p>
    </div>
}